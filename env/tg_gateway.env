# Telegram Gateway Environment Configuration

# Telegram (loaded from .env - do not duplicate here)
# TG_BOT_TOKEN - set in .env
# OWNER_TELEGRAM_ID - set in .env

# Gateway Mode
GATEWAY_MODE=poll
# WEBHOOK_PUBLIC_URL=https://your-domain.com/telegram/webhook

# Redis Streams
STREAM_REQ=soul.cmd.requests
STREAM_REP=soul.cmd.replies
STREAM_ALERTS=soul.outbound.alerts
STREAM_AUDIT=soul.audit

# HTTP Server
LISTEN_ADDR=0.0.0.0
LISTEN_PORT=8080

# Rate Limiting
RATE_LIMIT_MSGS_PER_MIN=20
GLOBAL_ACTIONABLE_MAX_PER_HOUR=5
GUEST_DEFAULT_MINUTES=30

# Service
SERVICE_NAME=tg_gateway
LOG_LEVEL=info
