# Notifier Service Configuration

# Redis Streams
STREAM_ALERTS_IN=soul.alerts
STREAM_ALERTS_OUT=soul.outbound.alerts
STREAM_REQ=soul.cmd.requests
STREAM_REP=soul.cmd.replies

# Postgres (optional audit)
# PG_DSN=postgresql://user:pass@postgres:5432/soulsct

# Throttling
GLOBAL_ACTIONABLE_MAX_PER_HOUR=5
DEDUP_TTL_SECONDS=21600

# Mute
MUTE_DEFAULT_MINUTES=30

# User settings
USER_TZ=America/Denver

# HTTP Server
LISTEN_ADDR=0.0.0.0
LISTEN_PORT=8084

# Service
SERVICE_NAME=notifier
LOG_LEVEL=info